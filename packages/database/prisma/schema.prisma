// Prisma Schema for FreeSquash League
// Designed for MVP with future expansion capabilities

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  PLAYER
  ADMIN
}

enum MatchStatus {
  PLAYED
  INJURY
  CANCELLED
}

enum MovementType {
  PROMOTION
  RELEGATION
  STAY
}

enum ClosureStatus {
  PENDING
  APPROVED
}

enum BugStatus {
  OPEN
  ACK
  CLOSED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Hashed with bcrypt
  role      Role     @default(PLAYER)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  player Player?
  bugReports BugReport[]

  @@map("users")
}

model Player {
  id             String   @id @default(cuid())
  userId         String   @unique
  name           String
  nickname       String?
  phone          String?
  email          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user                User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  groupPlayers        GroupPlayer[]
  matchesAsPlayer1    Match[]            @relation("Player1Matches")
  matchesAsPlayer2    Match[]            @relation("Player2Matches")
  wonMatches          Match[]            @relation("WinnerMatches")
  promotionRecords    PromotionRecord[]
  closureEntries      SeasonClosureEntry[]
  groupHistories      PlayerGroupHistory[]
  seasonStats         PlayerSeasonStats[]

  @@map("players")
}

model Season {
  id        String   @id @default(cuid())
  name      String
  startDate DateTime
  endDate   DateTime
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  groups Group[]
  closure SeasonClosure?
  groupHistories PlayerGroupHistory[]
  seasonStats PlayerSeasonStats[]
  previousSeasonId String?
  previousSeason   Season? @relation("SeasonRollover", fields: [previousSeasonId], references: [id])
  nextSeasons      Season[] @relation("SeasonRollover")

  @@map("seasons")
}

model Group {
  id        String   @id @default(cuid())
  name      String
  whatsappUrl String?
  seasonId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  season          Season            @relation(fields: [seasonId], references: [id], onDelete: Cascade)
  groupPlayers    GroupPlayer[]
  matches         Match[]
  promotionRecordsFrom PromotionRecord[] @relation("FromGroup")
  promotionRecordsTo   PromotionRecord[] @relation("ToGroup")
  closureEntriesFrom   SeasonClosureEntry[] @relation("ClosureFromGroup")
  closureEntriesTo     SeasonClosureEntry[] @relation("ClosureToGroup")
  groupHistories       PlayerGroupHistory[]
  seasonStats          PlayerSeasonStats[]

  @@index([seasonId])
  @@map("groups")
}

model GroupPlayer {
  id              String   @id @default(cuid())
  groupId         String
  playerId        String
  rankingPosition Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  group  Group  @relation(fields: [groupId], references: [id], onDelete: Cascade)
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([groupId, playerId])
  @@index([groupId])
  @@index([playerId])
  @@map("group_players")
}

model Match {
  id          String      @id @default(cuid())
  groupId     String
  player1Id   String
  player2Id   String
  date        DateTime    @default(now())
  gamesP1     Int         // 0-3
  gamesP2     Int         // 0-3
  winnerId    String?
  matchStatus MatchStatus @default(PLAYED)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  group   Group   @relation(fields: [groupId], references: [id], onDelete: Cascade)
  player1 Player  @relation("Player1Matches", fields: [player1Id], references: [id])
  player2 Player  @relation("Player2Matches", fields: [player2Id], references: [id])
  winner  Player? @relation("WinnerMatches", fields: [winnerId], references: [id])

  @@index([groupId])
  @@index([player1Id])
  @@index([player2Id])
  @@index([winnerId])
  @@index([date])
  @@index([createdAt])
  @@index([groupId, date])
  @@index([player1Id, date])
  @@index([player2Id, date])
  @@map("matches")
}

model PromotionRecord {
  id             String       @id @default(cuid())
  playerId       String
  fromGroupId    String?
  toGroupId      String?
  movementType   MovementType
  date           DateTime     @default(now())
  adminConfirmed Boolean      @default(false)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  player    Player @relation(fields: [playerId], references: [id], onDelete: Cascade)
  fromGroup Group? @relation("FromGroup", fields: [fromGroupId], references: [id])
  toGroup   Group? @relation("ToGroup", fields: [toGroupId], references: [id])

  @@index([playerId])
  @@index([date])
  @@map("promotion_records")
}

model SeasonClosure {
  id         String          @id @default(cuid())
  seasonId   String          @unique
  season     Season          @relation(fields: [seasonId], references: [id], onDelete: Cascade)
  status     ClosureStatus   @default(PENDING)
  createdAt  DateTime        @default(now())
  approvedAt DateTime?
  entries    SeasonClosureEntry[]

  @@map("season_closures")
}

model SeasonClosureEntry {
  id          String        @id @default(cuid())
  closureId   String
  closure     SeasonClosure @relation(fields: [closureId], references: [id], onDelete: Cascade)
  playerId    String
  player      Player        @relation(fields: [playerId], references: [id], onDelete: Cascade)
  fromGroupId String?
  fromGroup   Group?        @relation("ClosureFromGroup", fields: [fromGroupId], references: [id])
  toGroupId   String?
  toGroup     Group?        @relation("ClosureToGroup", fields: [toGroupId], references: [id])
  movementType MovementType
  finalRank   Int
  matchesWon  Int           @default(0)
  createdAt   DateTime      @default(now())

  @@index([closureId])
  @@index([playerId])
  @@map("season_closure_entries")
}

model PlayerGroupHistory {
  id          String       @id @default(cuid())
  playerId    String
  player      Player       @relation(fields: [playerId], references: [id], onDelete: Cascade)
  seasonId    String
  season      Season       @relation(fields: [seasonId], references: [id], onDelete: Cascade)
  groupId     String?
  group       Group?       @relation(fields: [groupId], references: [id])
  finalRank   Int?
  movementType MovementType?
  createdAt   DateTime     @default(now())

  @@index([playerId])
  @@index([seasonId])
  @@map("player_group_history")
}

model PlayerSeasonStats {
  id          String   @id @default(cuid())
  playerId    String
  seasonId    String
  groupId     String?
  wins        Int      @default(0)
  losses      Int      @default(0)
  setsWon     Int      @default(0)
  setsLost    Int      @default(0)
  injuries    Int      @default(0)
  winRate     Float    @default(0)
  setDiff     Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  player Player  @relation(fields: [playerId], references: [id], onDelete: Cascade)
  season Season  @relation(fields: [seasonId], references: [id], onDelete: Cascade)
  group  Group?  @relation(fields: [groupId], references: [id])

  @@unique([playerId, seasonId])
  @@index([seasonId])
  @@index([groupId])
  @@map("player_season_stats")
}

model BugReport {
  id          String    @id @default(cuid())
  userId      String?
  user        User?     @relation(fields: [userId], references: [id])
  email       String?
  description String    @db.Text
  status      BugStatus @default(OPEN)
  userAgent   String?   @db.Text
  appVersion  String?
  attachments String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([status])
  @@index([createdAt])
  @@map("bug_reports")
}
